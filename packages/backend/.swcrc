{
    "$schema": "https://json.schemastore.org/swcrc",
    "sourceMaps": true,
    "module": {
        "type": "commonjs",
        "strict": true
    },
    "jsc": {
        "target": "es2020",
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "paths": {
            "./": ["./src"],
            "@generated/*": ["generated/*"],
            "@app/*": ["src/*"]
        },
        "baseUrl": ".",
        "transform": {
            "decoratorMetadata": true
        }
    },
    "exclude": ["node_modules", "./dist"]
}
